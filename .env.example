# Database
DATABASE_URL="postgresql://user:password@localhost:5432/bur_crm"

# Auth (NextAuth)
AUTH_SECRET="your_generated_auth_secret"
AUTH_URL="http://localhost:3000"
# NEXTAUTH_URL/NEXTAUTH_SECRET are legacy aliases; AUTH_* is preferred for NextAuth v5

# Public app URL (used in tracking links, emails, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY="your_resend_api_key"

# Slack webhook (optional)
SLACK_WEBHOOK_URL=""

# AWS S3 uploads
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Forms ingestion
FORMS_ALLOWED_ORIGINS="http://localhost:3000"
FORMS_API_KEY="dev-key"

# Signup gate
ALLOW_SIGNUP="true"
